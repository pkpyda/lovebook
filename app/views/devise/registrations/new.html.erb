<div class="row">
	<div class="span6">
		<h2>Register with lovebook</h2>
		<p>Post your love quotes</p>
	</div>
	<div class="span6">
		<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name),html:{class:"well form-horizontal"}) do |f| %>
  			<%= f.error_notification %>
  			<div class="form-inputs">
  				<legend>Register</legend>
  				<%= f.input :first_name, :required => true, :autofocus => true %>
  				<%= f.input :last_name, :required => true%>
  				<%= f.input :profile_name, :required => true%>
    			<%= f.input :email, :required => true%>
    			<%= f.input :password, :required => true %>
    			<%= f.input :password_confirmation, :required => true %>
  			</div>
  			<div class="form-actions">
    			<%= f.button :submit, "Sign up" %>
  			</div>
  			<%= render "devise/shared/links" %>
		<% end %>			
	</div>
</div>